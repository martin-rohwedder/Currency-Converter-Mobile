<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurrencyConverter.Views.CurrencyConverterPage"
             xmlns:local="clr-namespace:CurrencyConverter.ViewModels"
             Title="Currency Converter"
             Shell.NavBarIsVisible="False">
    <ContentPage.BindingContext>
        <local:CurrencyConverterViewModel />
    </ContentPage.BindingContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Text="Valuta Omregner"
               HorizontalOptions="Center"
               FontSize="32"
               Grid.Row="0" />

        <FlexLayout Direction="Column"
                    AlignItems="Stretch"
                    JustifyContent="SpaceEvenly"
                    Grid.Row="1">
            <Image Source="dotnet_bot.svg"
                   HorizontalOptions="Center" />

            <Grid ColumnSpacing="25"
                  RowSpacing="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Text="Beløb"
                       FontSize="24"
                       Grid.Row="0" 
                       Grid.Column="0" 
                       Grid.ColumnSpan="3" />

                <Entry Placeholder="Indtast Beløb"
                       Keyboard="Numeric"
                       Text="{Binding Amount}"
                       Grid.Row="1"
                       Grid.Column="0"
                       Grid.ColumnSpan="3" />

                <Picker ItemsSource="{Binding Currencies}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedFromCurrency}"
                        Grid.Row="2"
                        Grid.Column="0" />
                
                <Label Text="==>" 
                       Grid.Row="2" 
                       Grid.Column="1"
                       VerticalOptions="Center" />

                <Picker ItemsSource="{Binding Currencies}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedToCurrency}"
                        Grid.Row="2"
                        Grid.Column="2" />
            </Grid>

            <Label FontSize="28"
                   HorizontalOptions="Center">
                <Label.Text>
                    <MultiBinding StringFormat="{}{0} {1}">
                        <Binding Path="Amount" />
                        <Binding Path="SelectedToCurrency.Name" />
                    </MultiBinding>
                </Label.Text>
            </Label>
        </FlexLayout>

        <Label Text="Copyright 2023 Martin Rohwedder"
               FontSize="Small"
               HorizontalOptions="Center"
               Grid.Row="2" />
    </Grid>
</ContentPage>